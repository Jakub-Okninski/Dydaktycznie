@model List<Quiz>

@{
    ViewData["Title"] = "Quiz List";
}

<h1>Quiz List</h1>

<ul>
    @foreach (var quiz in Model)
    {
        <li>
            @Html.DisplayFor(modelItem => quiz.Title)
            <a href="#" class="start-quiz-link" data-quiz-id="@quiz.QuizID">Start Mini Quiz</a>
        </li>
    }
</ul>

<div id="mini-quiz-container">
    <!-- Container for mini-quiz content loaded via JavaScript -->
</div>

@section Scripts {
    <script>
        // JavaScript code to handle starting the mini-quiz
        document.querySelectorAll('.start-quiz-link').forEach(link => {
            link.addEventListener('click', function (e) {
                e.preventDefault();
                var quizId = this.getAttribute('data-quiz-id');

                // Example: Load mini-quiz content using fetch API
                fetch('/Home/MiniQuiz/' + quizId)
                    .then(response => response.text())
                    .then(data => {
                        document.getElementById('mini-quiz-container').innerHTML = data;
                    })
                    .catch(error => {
                        console.error('Error loading mini-quiz:', error);
                    });
            });
        });
    </script>
}
