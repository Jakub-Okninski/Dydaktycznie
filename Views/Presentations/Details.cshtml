@model Dydaktycznie.Models.Presentation
@using System.Security.Claims

@{
    ViewData["Title"] = "Details";
}

<h1>Prezentacaja:  @Html.DisplayFor(model => model.Title)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Author Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SlidesCount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SlidesCount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ViewCount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ViewCount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.status)
        </dd>
        <dt class="col-sm-2">
            Download
        </dt>


        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.FileName))
            {
                <a href="@Url.Content($"~/img/{Model.FileName}")" download>@Model.FileName</a>
            }
            else
            {
                <span>No file available</span>
            }
        </dd>
        
    </dl>
</div>
<div>

    @if (User.Identity.IsAuthenticated && Model.AuthorID == User.FindFirstValue(ClaimTypes.NameIdentifier))
    {
        <a asp-action="Edit" asp-route-id="@Model?.PresentationID">Edit</a>
    
    }
    <a asp-action="Index">Back to List</a>
</div>
