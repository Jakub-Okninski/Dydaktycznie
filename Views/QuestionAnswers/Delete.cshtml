@model Dydaktycznie.Models.QuestionAnswer

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuń odpoiwedź</h1>

<h3>Czy na pewno chcesz to usunąć?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuizQuestion.Question)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuizQuestion.Question)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Answer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Answer)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Correct)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Correct)
            {
                <span class="text-success">Poprawne</span>
            }
            else
            {
                <span class="text-danger">Niepoprawna</span>
            }
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="QuestionAnswerID" />
        <input type="submit" value="Usuń Odpowiedź" class="btn btn-danger" /> |
        <a asp-controller="QuizQuestions" asp-action="Index">Back to List</a>

    </form>
</div>
